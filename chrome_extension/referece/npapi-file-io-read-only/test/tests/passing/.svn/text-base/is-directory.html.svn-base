<!DOCTYPE XHTML>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <title>NPAPI File IO test</title>
  <script type="text/javascript" src="../../../closure/base.js"></script>
	<script type="text/javascript" src="../common.js"></script>
  <script type="text/javascript">
	goog.require('goog.testing.jsunit');
	</script>
</head>
<body>
	<script type="text/javascript">
	function testDirectoryIsDirectory() {
    assertTrue(plugin.isDirectory(getPath("subdir-exists")));
  }
  
  function testDirectoryWithTrailingSlashIsDirectory() {
    assertTrue(plugin.isDirectory(getPath("subdir-exists" + getPlatformSlash())));
  }
  
  function testDirectoryWithTrailingSlashesIsDirectory() {
    assertTrue(plugin.isDirectory(getPath("subdir-exists" + getPlatformSlash() + getPlatformSlash())));
  }
  
  function testFileIsNotDirectory() {
    assertFalse(plugin.isDirectory(getPath("a.txt")));
  }
  
  function testDirectoryWhichDoesNotExistIsNotDirectory() {
    assertFalse(plugin.isDirectory(getPath("directory-does-not-exist-really")));
  }
	</script>
</body>
</html>